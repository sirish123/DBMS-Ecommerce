generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model selleritems {
  id          String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email       String?
  itemname    String?
  itemprice   Int?
  quantity    Int?
  itemimage   String?
  contact     String?
  producttype String?
  useritems   useritems[]
}

model advertisorcodevalue{
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email        String?  
  couponcode   String?
  quantity      Int?
  producttype  String?
}

model advertisorposter{
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email        String?
  productname  String?
  imageurl     String?
  producttype  String?
}

model userbankaccount {
  id            String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  accholdername String?
  accountnum    String?
  cvv           String?
  amount        Int?
  email         String?
}

model useritems {
  id         String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email      String?
  itemcode   String?      @db.Uuid
  quantity   Int?
  status     Int?
  selleritem selleritems? @relation(fields: [itemcode], references: [id], onDelete: Cascade)
}

model users {
  id       String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email    String?
  password String?
  name     String?
  type     String?
}

model userHistory{
 id         String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
 userid     String?
 producttype String?
}